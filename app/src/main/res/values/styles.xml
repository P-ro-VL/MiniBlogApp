<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleFontStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textColor">#272727</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@color/royalBlue</item>
    </style>

    <style name="circularImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="userProfileBanner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="postThumbnailStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="fontTitle">
        <item name="android:fontFamily">@font/sf_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="fontSubtitle">
        <item name="android:fontFamily">@font/sf_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="fontSection">
        <item name="android:fontFamily">@font/sf_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="fontContent">
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="fontNote">
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="fontNoteSemibold">
        <item name="android:fontFamily">@font/sf_semibold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textFontWeight">600</item>
    </style>

</resources>